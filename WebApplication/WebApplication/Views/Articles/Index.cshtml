@model List<Article>

@{
    Layout = "_CommonLayout";
    ViewBag.Title = "Список статей";
}

@section StylesSection {
    <link href="~/Styles/ArticlesStyleSheet.css" rel="stylesheet" />
}

<div id="articles">
    <div id="articles-list">
        @foreach (var item in Model)
        {
            <div class="article">
                <a href="#">
                    <h2>@item.Title</h2>
                    <div class="article-date">
                        Дата публикации: @item.PostDate
                    </div>
                    <div class="article-shortdescription">
                        @Html.Raw(item.ShortDescription)
                    </div>
                </a>
                <hr />
                <div class="article-commands">
                    <form method="post" asp-controller="Articles" asp-action="Delete" asp-route-id="@item.Id">
                        <a class="button" asp-controller="Articles" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                        <input class="button" type="submit" value="Удалить" />
                    </form>
                </div>
            </div>
        }
    </div>
</div>